<!DOCTYPE html>
<html>
<head>
  <title>GIvents</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container-fluid">
  <nav class="navbar navbar-inverse">
  <span title="Home">
    <%= link_to events_path, class: "glyphicon glyphicon-home col-md-2" do %>
    <% end %>
  </span>
  <% if logged_in? %>
  <span title="Pin Event">
    <%= link_to new_event_path, class: "glyphicon glyphicon-pushpin ganey col-md-2" do %>
    <% end %>
  </span>
  <% end %>
<span>
  <% if logged_in? %>
  <%= link_to 'Log Out', logout_path, class: 'col-md-1 signog', :style=>'float:right;', data: {confirm: "Are you sure?"} %>
  <span class="col-md-2 signog", style='float:right;'><%= link_to "#{current_user.name}".upcase, user_path(current_user.name) %></span>
  <% else %>
  <%= link_to 'Sign Up', new_user_path, class: 'col-md-1 signog', :style=>'float:right;'%>
  <%= link_to 'Login', new_session_path, class: 'col-md-2 signog', :style=>'float:right;'%>
<% end %>
</span>

</nav>
  <%= yield %>
</div>

<%# time_ago_in_words(Time.parse("July 23 2017")) %>

</body>
</html>
