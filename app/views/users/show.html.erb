<div class="jumbotron">

  <% if current_user.photo_file_name == nil %>
  <%= image_tag 'default_photo.jpg', style:"height:100px;border-radius: 12px;box-shadow: 7px 7px 7px #d2d2d2;" %>
  <% else %>
  <%= image_tag current_user.photo.url(:thumb) %>
  <% end %>

  <table class="table table-hover">
    <thead>
      <tr>
        <td>
          <h2><strong>Events</strong></h2>
        </td>
        <td>
          <h3><strong>Edit</strong></h3>
        </td>
        <td>
          <h3><strong>Trash</strong></h3>
        </td>
      </tr>
    </thead>
    <tbody >
    <% @user.events.each do |evnt| %>
      <tr>
        <td>
          <h3><strong><%= link_to evnt.e_name, event_path(evnt), class:"entry" %></strong></h3>
        </td>
        <td>
          <span title="Edit Event">
            <%= link_to edit_event_path(evnt), class: "glyphicon glyphicon-pencil col-md-1" do %>
            <% end %>
          </span>
        </td>
        <td>
          <span title="Trash Event">
            <%= link_to event_path(evnt[:id]), class: "glyphicon glyphicon-trash col-md-1", method: :delete, data: {confirm: "Are you sure?"} do %>
            <% end %>
          </span>
        </td>
      </tr>
    <% end %>
    </tbody>
</table>

</div>
